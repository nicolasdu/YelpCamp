<% include ../layouts/header.ejs %>

<div class="container">
    <div class="row" id="info">
        <h1 id="camps">Edit <%=campground.name%> Campground   </h1>
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" value="<%=campground.name%>">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" value="<%=campground.price%>" min="0.01" step="0.01">
                    </div>
                    
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" value="<%=campground.image%>">
                    </div>
                    
                    <div class="form-group">
                        <textarea rows="4" cols="50" class="form-control" name="desc"><%=campground.description%></textarea>
                    </div>
                   
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                    </div>
                </form>
              <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../layouts/footer.ejs %>